<% @page_title = "UserAuth | Login" -%>

<div class="login-wrapper">
	<center>
		<img src="/assets/logo-alt.png" width="100%">
	</center>
	<div class="sign-form">
		<%= form_tag(:controller => 'sessions', :action => 'login_attempt') do %>
			<%= text_field_tag :username_or_email, nil, placeholder: 'Username or Email', class: 'input' %>
			<%= password_field_tag :login_password, nil, placeholder: 'Password', class: 'input' %>
			<%= submit_tag "Log in", class: 'button' %>
			<%= link_to "Register", '/signup', class: 'register' %>
		<% end %>
	</div>
</div>